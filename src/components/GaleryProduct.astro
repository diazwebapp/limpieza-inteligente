---
// GaleryProduct.astro
// Recibe: images (array de ids de imagen)
import { productImages } from "../datos/database.js";
const { images } = Astro.props;
// Construye un array de objetos: cada uno tiene las 3 dimensiones
const imageObjs = Array.isArray(images)
  ? images.map(id => productImages.find(img => img.id === id)).filter(Boolean)
  : [];
let selectedIdx = 0;
---
<div class="gallery-product">
  <div class="gallery-main">
    <img src={imageObjs[selectedIdx]?.["250x250"] || "/public/placeholder-250x250.png"} width="250" height="250" alt="Imagen principal del producto" class="gallery-main-img" id="gallery-main-img" style="cursor:pointer;" />
  </div>
  <div class="gallery-thumbs">
    {imageObjs.map((imgObj, idx) => imgObj && (
      <img 
        src={imgObj["60x60"] || "/public/placeholder-60x60.png"}
        alt={`Miniatura ${idx+1}`}
        class={`gallery-thumb${selectedIdx === idx ? ' selected' : ''}`}
        width="60" height="60" style="cursor:pointer;"
        data-250={imgObj["250x250"] || "/public/placeholder-250x250.png"}
        data-1280={imgObj["1280x720"] || ""}
      />
    ))}
  </div>
  <div id="gallery-modal" class="gallery-modal" style="display:none;">
    <div class="gallery-modal-backdrop"></div>
    <img id="gallery-modal-img" class="gallery-modal-img" src="" alt="Imagen ampliada" />
    <button id="gallery-modal-close" class="gallery-modal-close">&times;</button>
  </div>
</div>

<style>
.gallery-product {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 1rem;
}
.gallery-main {
  width: 250px;
  height: 250px;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #fff;
  border-radius: 12px;
  box-shadow: 0 2px 8px rgba(0,0,0,0.07);
}
.gallery-main-img {
  max-width: 100%;
  max-height: 100%;
  border-radius: 12px;
  object-fit: contain;
}
.gallery-thumbs {
  display: flex;
  gap: 0.5rem;
  justify-content: center;
}
.gallery-thumb {
  width: 60px;
  height: 60px;
  object-fit: cover;
  border-radius: 8px;
  border: 2px solid transparent;
  background: #fff;
  transition: border 0.2s;
}
.gallery-thumb.selected {
  border: 2px solid #0077ff;
}
.gallery-thumb:hover {
  border: 2px solid #aaa;
}
.gallery-modal {
  position: fixed;
  top: 0; left: 0; right: 0; bottom: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 9999;
}
.gallery-modal-backdrop {
  position: absolute;
  top: 0; left: 0; right: 0; bottom: 0;
  background: rgba(0,0,0,0.85);
  z-index: 1;
}
.gallery-modal-img {
  position: relative;
  z-index: 2;
  max-width: 90vw;
  max-height: 90vh;
  border-radius: 12px;
  box-shadow: 0 4px 32px rgba(0,0,0,0.25);
}
.gallery-modal-close {
  position: absolute;
  top: 24px;
  right: 32px;
  z-index: 3;
  background: none;
  border: none;
  color: #fff;
  font-size: 3rem;
  cursor: pointer;
}
</style>
<script is:inline>
document.addEventListener('astro:page-load', function() {
  const thumbs = document.querySelectorAll('.gallery-thumb');
  const mainImg = document.getElementById('gallery-main-img');
  const modal = document.getElementById('gallery-modal');
  const modalImg = document.getElementById('gallery-modal-img');
  const modalClose = document.getElementById('gallery-modal-close');
  const modalBackdrop = document.querySelector('.gallery-modal-backdrop');

  thumbs.forEach((thumb) => {
    thumb.addEventListener('click', function() {
      thumbs.forEach(t => t.classList.remove('selected'));
      thumb.classList.add('selected');
      if(mainImg) {
        mainImg.src = thumb.getAttribute('data-250') || "/public/placeholder-250x250.png";
      }
    });
  });

  if(mainImg && modal && modalImg && modalClose && modalBackdrop) {
    mainImg.addEventListener('click', function() {
      // Usa la imagen 1280x720 si existe, si no la 250x250
      const selectedThumb = document.querySelector('.gallery-thumb.selected');
      const img1280 = selectedThumb?.getAttribute('data-1280');
      const img250 = selectedThumb?.getAttribute('data-250');
      modalImg.src = img1280 && img1280 !== '' ? img1280 : (img250 || mainImg.src);
      modal.style.display = 'flex';
    });
    modalClose.addEventListener('click', function() {
      modal.style.display = 'none';
    });
    modalBackdrop.addEventListener('click', function() {
      modal.style.display = 'none';
    });
    document.addEventListener('keydown', function(e) {
      if(e.key === 'Escape') modal.style.display = 'none';
    });
  }
});
</script>
