---
type Datas ={
    data:{
        title:string
        description:string
    }[]
}
const {data} = Astro.props as Datas
---
<ul>
    {
        data.map(d=>(
        <li class="card">
                <h3>{d.title}</h3>
                <p>{d.description}</p>
            </li>
        ))
    }
</ul>

<style>
    ul{
        list-style:none;
        display:grid;
        grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
        gap:20px;
        margin: 10px auto;
        li{
            padding:20px;
            border-radius:var(--rounded);
            box-shadow: 0px 1px 3px rgba(0,0,0,0.2);
        }
        h3{
            color: var(--cta);
        }
    }

</style>