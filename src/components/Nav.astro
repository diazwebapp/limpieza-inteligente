---
const marcas = [
  { name: "Cecotec", link: "/cecotec" },
  { name: "Roomba", link: "/roomba" },
  { name: "Xiaomi", link: "/xiaomi" }
];
const caracteristicas = [
  // Puedes agregar características aquí más adelante
];
---

<nav class="nav-dropdown">
  <ul>
    <li class="dropdown">
      <button type="button" class="dropdown-toggle" aria-expanded="false">Marcas</button>
      <ul class="dropdown-menu">
        {marcas.map(marca => (
          <li><a href={marca.link}>{marca.name}</a></li>
        ))}
      </ul>
    </li>
    <li class="dropdown">
      <button type="button" class="dropdown-toggle" aria-expanded="false">Características</button>
      <ul class="dropdown-menu">
        {caracteristicas.length === 0 ? (
          <li class="empty">Próximamente...</li>
        ) : (
          caracteristicas.map(carac => (
            <li><a href={carac.link}>{carac.name}</a></li>
          ))
        )}
      </ul>
    </li>
  </ul>
</nav>

<style>



.nav-dropdown ul {
  list-style: none;
  display: flex;
  flex-flow: column wrap;
  padding: 0 10px;
  align-items: flex-end;
}


.nav-dropdown button, .nav-dropdown .dropdown-menu{
  font-weight: 700;
  padding: 20px 5px;
  border-radius: var(--rounded) var(--rounded) 0 0;
  box-shadow: 0px 0 1px rgba(0, 0, 0, 0.2);
  cursor: pointer;
  transition: background 0.2s;
 width: 220px;

}

.dropdown{
   margin-bottom: 20px;
}
.dropdown:hover > .dropdown-menu{
  display: block;
}
.nav-dropdown .dropdown-menu {
  border-radius: 0 0 var(--rounded) var(--rounded);
  overflow-y: auto;
  max-height: 60vh;
  font-weight: 400;
  padding: unset;
}
.nav-dropdown .dropdown-menu a {
  display: block;
  padding: 20px 5px;
}
.nav-dropdown .dropdown-menu li {
  
  border-bottom: 1px solid rgba(0, 0, 0, 0.1);
  width:100%;
}
.nav-dropdown .dropdown-menu li:last-child, .nav-dropdown button {
  border-bottom: none;
  background-color: var(--secondary);
  color: var(--light);
}
.nav-dropdown .dropdown-menu li:last-child a {
  color: var(--light);
}
.nav-dropdown .dropdown-menu .empty {
  color: #888;
  font-style: italic;
}

/* Desktop: show on hover/focus */
@media (min-width: 920px) {
  .nav-dropdown ul {
  flex-flow: row wrap;
  background-color: #fff;
  gap:10px;
}
.nav-dropdown .dropdown-menu{
  display: none;
  position: absolute;
  z-index: 10;
}
.dropdown{
   margin-bottom: unset;
}
.nav-dropdown button, .nav-dropdown .dropdown-menu{
  width:150px;
}
.nav-dropdown button, .nav-dropdown .dropdown-menu a{
  padding: 12px 6px ;
}
}
</style>

<script is:inline>
 document.addEventListener("astro:page-load", () => {
  function closeAllDropdowns(currentDropdown = null) {
    const dropdowns = document.querySelectorAll('.dropdown');
    for (let i = 0; i < dropdowns.length; i++) {
      const dropdown = dropdowns[i];
      if (dropdown !== currentDropdown) {
        dropdown.classList.remove('open');
        const btn = dropdown.querySelector('.dropdown-toggle');
        if (btn) btn.setAttribute('aria-expanded', 'false');
      }
    }
  }

  const allDropdowns = document.querySelectorAll('.nav-dropdown .dropdown');
  for (let i = 0; i < allDropdowns.length; i++) {
    const dropdown = allDropdowns[i];
    const btn = dropdown.querySelector('.dropdown-toggle');
    if (btn) {
      btn.addEventListener('click', (e) => {
        e.stopPropagation();
        const isOpen = dropdown.classList.contains('open');
        if (!isOpen) {
          closeAllDropdowns(dropdown);
          dropdown.classList.add('open');
          btn.setAttribute('aria-expanded', 'true');
        } else {
          dropdown.classList.remove('open');
          btn.setAttribute('aria-expanded', 'false');
        }
      });
    }
    const links = dropdown.querySelectorAll('.dropdown-menu a');
    for (let j = 0; j < links.length; j++) {
      links[j].addEventListener('click', () => {
        dropdown.classList.remove('open');
        if (window.innerWidth <= 919) {
          setTimeout(() => {
            closeAllDropdowns();
          }, 200);
        }
      });
    }
  }

  document.addEventListener('click', () => {
    closeAllDropdowns();
  });
}); 
</script>
