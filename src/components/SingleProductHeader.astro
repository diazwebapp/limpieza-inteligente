---
import { amazonProduts, marcas } from "../datos/database.js";
import GaleryProduct from "./GaleryProduct.astro";
const { id } = Astro.props;
const product = amazonProduts.find(p => p.id === id);

// Obtener el objeto de la marca y su nombre legible
let marcaObj = null;
if (product && product.marca) {
  if (typeof product.marca === 'number') {
    marcaObj = marcas.find(m => m.id === product.marca);
  } else if (typeof product.marca === 'string') {
    marcaObj = marcas.find(m => m.name === product.marca);
  }
}
const marcaName = marcaObj ? marcaObj.name.charAt(0).toUpperCase() + marcaObj.name.slice(1) : (product?.marca || '');

// Imágenes de ejemplo para la galería (puedes personalizar según el producto)
const galleryMain = product?.imageUrl;
const galleryImages = [
  "/https://m.media-amazon.com/images/I/31tALzIJ51L._AC_US100_.jpg",
  "/https://m.media-amazon.com/images/I/31pWqBNz8RL._AC_US100_.jpg",
  "/https://m.media-amazon.com/images/I/41Xd082HiNL._AC_US100_.jpg"
].join(",");
---
{product ? (
  <div class="product-flex">
    <GaleryProduct main={galleryMain} images={galleryImages} />
    <div class="product-buy-rating">
      <div class="product-rating">
        <span class="stars" aria-label={`${product.stars ?? 0} de 5 estrellas`}>
          {[1,2,3,4,5].map(i => (
            <span class={`star-icon ${product.stars >= i ? 'full-star' : product.stars >= i - 0.5 ? 'half-star' : 'empty-star'}`}></span>
          ))}
        </span>
        <span class="rating-count">({product.ratingCount ?? '0'})</span>
      </div>
      <a href={product.urlAfiliado} target="_blank" rel="noopener noreferrer" class="btn btn-amazon">Comprar en Amazon</a>
    </div>
    <ul class="product-details">
      {marcaName && <li><strong>Marca:</strong> {marcaName}</li>}
      {product.modelo && <li><strong>Modelo:</strong> {product.modelo}</li>}
      {product.feactures?.color && <li><strong>Color:</strong> {product.feactures.color}</li>}
      {product.feactures?.dimensiones && <li><strong>Dimensiones:</strong> {product.feactures.dimensiones}</li>}
      {product.feactures?.capacidad && <li><strong>Capacidad:</strong> {product.feactures.capacidad}</li>}
      {product.feactures?.voltaje && <li><strong>Voltaje:</strong> {product.feactures.voltaje}</li>}
      {product.feactures?.apagadoAutomatico !== undefined && <li><strong>Apagado automático:</strong> {product.feactures.apagadoAutomatico ? 'Sí' : 'No'}</li>}
      {product.feactures?.dispositivosCompatibles && <li><strong>Dispositivos compatibles:</strong> {product.feactures.dispositivosCompatibles}</li>}
      {product.feactures?.caracteristicasEspeciales && <li><strong>Características especiales:</strong> {product.feactures.caracteristicasEspeciales}</li>}
      {product.feactures?.peso && <li><strong>Peso del producto:</strong> {product.feactures.peso}</li>}
      {product.feactures?.potenciaSuccion && <li><strong>Potencia de succión:</strong> {product.feactures.potenciaSuccion}</li>}
      {product.feactures?.depositoPolvo && <li><strong>Depósito de polvo:</strong> {product.feactures.depositoPolvo}</li>}
      {product.feactures?.depositoAgua && <li><strong>Depósito de agua:</strong> {product.feactures.depositoAgua}</li>}
    </ul>
  </div>
) : (
  <div>Producto no encontrado</div>
)}
<style>
.product-flex {
  display: flex;
  flex-flow: column;
  align-items:center;
  margin-bottom: 2rem;
}
.product-details {
  width: 100%;
  box-sizing: border-box;
}
@media (min-width: 768px) {
  .product-flex {
    flex-flow: row wrap;
    align-items: flex-start;
    max-width: 900px;
  }
  .product-flex .gallery-product{
    width: 320px;
  }
  .product-details {
    width: calc(100% - 320px);
    box-sizing: border-box;
    padding-left: 3rem;
  }
  .product-buy-rating {
    width: 300px;
    align-items: flex-start;
    margin-top: 0;
  }
}
.product-buy-rating {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 1rem;
  margin-top: 1rem;
  order:3;
}
.product-rating {
  font-size: 1.1rem;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  gap: 0.5rem;
  text-align: center;
}
.stars {
  color: #f5a623;
  font-size: 1.2em;
  display: inline-block;
}
.star-icon.full-star::before { content: '★'; color: #FFD700; }
.star-icon.half-star::before { content: '★'; color: #FFD700; opacity: 0.5; }
.star-icon.empty-star::before { content: '★'; color: #eee; }
.rating-count {
  color: #666;
  font-size: 1em;
}
.btn.btn-amazon {
  background: #ffd814;
  color: #232f3e;
  border: none;
  padding: 0.5em 1.2em;
  border-radius: 4px;
  font-weight: bold;
  text-decoration: none;
  transition: background 0.2s;
}
.btn.btn-amazon:hover {
  background: #f7ca00;
}
</style>
