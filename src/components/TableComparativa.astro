  </tr>
  
  {products?.map((product:Product) => {
    const precioOriginal = product.price;
    const badges = getBadges(product);
    
    return (
      <tr>
        <td>
          <div class="product-title">
            
            {badges.length > 0 && (
              <div class="badges">
                {badges.map(badge => (
                  <span class="badge">{badge}</span>
                ))}
