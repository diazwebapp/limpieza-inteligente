---
import { ClientRouter } from "astro:transitions";
import Nav from "../components/Nav.astro";

const { title, description, schemas = [], googleSiteVerification, lang="es" } = Astro.props;
---

<!DOCTYPE html>
<html lang={lang} >
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{title} | Limpieza inteligente</title>
    <meta name="description" content={description}>
     <ClientRouter />
     {Array.isArray(schemas) && schemas.length > 0 && schemas.map((schema, i) => (
      <script
        type="application/ld+json"
        set:html={JSON.stringify(schema)}
      />
    ))}
   <meta name="google-site-verification" content="_AcFY2JvJbHHxMkuGvPt7YQmKqqjwDqTBH1ZIOdc9T8" />
      <!-- Favicon SVG (recomendado para modernos) -->
  <link rel="icon" href="/favicon.ico" type="image/x-icon" />

  <!-- Fallback para navegadores antiguos (opcional) -->
  <link rel="alternate icon" href="/favicon.ico" type="image/x-icon" />
  <link rel="shortcut icon" href="/favicon.ico" type="image/x-icon" />
  <meta property="og:image" content="https://www.electronow.es/blog/wp-content/uploads/2019/06/conga-series-3090-cecotec-04.jpg">
  <meta property="og:image:width" content="1600">
  <meta property="og:image:height" content="900">
  <meta property="og:title" content={title}>
  <meta property="og:description" content={description}>
</head>
<body>

    <header>
        <div class="container header-container">
            <a href="/"><strong class="app-title">Limpieza inteligente</strong></a>
            <Nav />
        </div>
    </header>

    <slot />

    <footer>
        <div class="container footer-container">
            <a href="/"><strong class="app-title">Limpiador Robot</strong></a>
            <button class="hamburger" aria-label="Abrir menú" aria-controls="mobile-nav" aria-expanded="false">
                <span></span><span></span><span></span>
            </button>
        </div>
        <div id="mobile-nav" class="mobile-nav">
            <Nav />
        </div>
    </footer>

</body>
</html>

<style is:global>
:root {
  /* Color palette */
  --primary: #333;
  --secondary: #0044CC;
  --cta: #C2008E;
  --cta-hover: #aa047e;
  --light: #f5f3f3;
  --rounded: .6rem;
  
  /* Typography */
  font-family: "Zed Display", "Helvetica Neue", Roboto, sans-serif;
  line-height: 1.3;
  
  /* Text rendering */
  font-synthesis: none;
  text-rendering: optimizeLegibility;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}

/* Reset */
* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
  text-decoration: none;  
  color: var(--primary);
}

body {
  margin: 0;
  min-width: 320px;
  font-weight: 500;
  scroll-behavior: smooth;
}
button{background-color:transparent;border: none;}
.container {
  width: 90%;
  max-width:1080px;
  margin: 0 auto;
}

main section {
  padding-top: 60px;
}
main section:first-child{
  padding-top: unset;
}
/* Typography */
h1, h2, h3, h4, h5, h6 {
  font-weight: 700;
  line-height: 1.2;
  padding: 10px 0;
  color: var(--primary);
}
table{
  border-spacing: 0;
  min-width: 916px;
  text-align: left;
  width: 100%;
  overflow: hidden;
  border-radius: var(--rounded);
}
.table-responsive{
  box-shadow: 0px 0px 3px var(--primary);
  padding: 4px;
  border-radius: var(--rounded);
  overflow: auto;
  margin: 20px auto;
}

table th, table td{
  color: var(--light);
  padding: 10px 5px;
}
table strong{
  color:var(--light)
}
table thead{
  background-color: #111;
}
table tr{
  background-color: var(--primary);
}
table thead th{
  padding: 20px 5px;
}
.app-title{
  font-size: 1.5rem;
  font-weight: 700;
  color: var(--primary);
  text-decoration: none;
}
h1 {
  font-size: 2.5rem;
  text-align: center;
  padding: 20px 0;
}

h2 {
  font-size: 1.8rem;
}

h3 {
  font-size: 1.3rem;
}
.cta-box {
    padding: 25px;
    border-radius: var(--rounded);
    max-width: 900px;
    margin: 0 auto;
    box-shadow: 0px 0px 2px rgba(0,0,0, .2);
    display: flex;
    gap: 10px;
}
.cta{
  background-color:var(--cta);
  color:var(--light);
  padding:5px 10px;
  border:none;
  border-radius:var(--rounded);
  font-weight:700;
  font-size:1.2rem;
  cursor: pointer;
  transition: all .3s ease;
  text-decoration:none;
   box-shadow: 0px 4px 8px rgba(0, 0, 0, .1);
   margin: 10px auto;
  display: block;
  text-align: center;
  width: fit-content;
}
.cta:hover{
  background-color: var(--cta-hover);
  transform: translateY(-2px);
  box-shadow: 0px 6px 12px rgba(0, 0, 0, .15);
}
.cta:active{
  transform: translateY(0);
  box-shadow: 0px 2px 4px rgba(0, 0, 0, .1);
}

.cta.secondary {
    background: white;
    color: var(--secondary);
    border: 2px solid var(--secondary);
}
.cta.small {
    padding: 8px 15px;
    font-size: 0.9em;
}
.cta.large {
    padding: 15px 30px;
    font-size: 1.2em;
}
.feactures-list {
      border-radius: 1.2rem;
      box-shadow: 0 4px 24px 0 rgba(0,0,0,0.08);
      padding: 2rem 2.5rem;
      margin: 2rem auto;
      color: var(--primary);
      border: 2px solid var(--primary);
      list-style: none;
      max-width: 1080px;
    }
    .feactures-list li {
      margin-bottom: 1.5rem;
      padding: 1.2rem 1rem;
      background: var(--light);
      border-left: 7px solid var(--primary);
      border-radius: 0.7rem;
      font-size: 1.08rem;
      transition: background 0.2s;
      box-shadow: 0 2px 8px 0 rgba(46,125,255,0.07);
    }
    .feactures-list li:last-child {
      margin-bottom: 0;
    }
    .feactures-list li strong {
      color: var(--secondary);
    }
p {
  margin-bottom: 16px;
  line-height: 1.6;
  word-break: break-word;
}

/* Footer fijo en mobile con menú hamburguesa */
body > footer, body > header {
    width: 100%;
    padding: 0;
    position: sticky;
    bottom: 0;
    backdrop-filter: blur(2px);
    box-shadow: 0px .5px 2px rgba(0, 0, 0, .1);
    background-color: rgba(255, 255, 255, .8);
    z-index: 1000;
}
body > footer {
  padding: 10px 0px;
}
/* Header solo visible en desktop */
body > header {
  top: 0;
  bottom: unset;
  display: none;
  padding-top: 7px;
}


.footer-container,.header-container {
    display: flex;
    justify-content: space-between;
    align-items: center;
}
.hamburger {
    width: 44px;
    height: 44px;
    background: none;
    border: none;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    gap: 6px;
    cursor: pointer;
    z-index: 1100;
}
.hamburger span {
    display: block;
    width: 30px;
    height: 4px;
    background: var(--primary);
    border-radius: 2px;
    transition: all 0.3s;
}
.mobile-nav {
    display: none;
    position: fixed;
    right: 0;
    bottom: 70px;
    background: #fff;
    box-shadow: 0 -2px 16px 0 rgba(0,0,0,0.08);
    z-index: 1050;
    padding: 20px 0 10px 0;
    border-radius: var(--rounded) ;
    animation: fadeInUp 0.2s;
}
.mobile-nav.open {
    display: block;
}

@keyframes fadeInUp {
    from { opacity: 0; transform: translateY(40px);}
    to { opacity: 1; transform: translateY(0);}
}
@media (min-width: 916px) {
    
    body > header {
      display: flex;
    }
     
    body > footer {
        display: none !important;
    }
}
@media (min-width: 1281px) {
  .container{
      max-width:1280px; 
     }
    }

.app-nav-title,.app-nav a {
    text-align: center;
    display: block;
    border-bottom: 2px solid var(--light);
    width: 200px;
    background-color: white;
    border-radius: var(--rounded) var(--rounded) 0 0;
    margin: 0 !important;
    padding: 10px;
}
.app-nav a{
    border-radius:unset;
}
.app-nav a:last-child{
    border-radius: 0 0 var(--rounded) var(--rounded);
}
.footer-nav a {
    font-size: 1rem;
    color: var(--primary);
    padding: 10px 12px;
    border-radius: var(--rounded);
    background: none;
    transition: background 0.2s;
}
</style>

<script is:inline>
document.addEventListener("astro:page-load", () => {
    const hamburger = document.querySelector(".hamburger");
    const mobileNav = document.getElementById("mobile-nav");
    if (hamburger && mobileNav) {
        hamburger.addEventListener("click", () => {
            const isOpen = mobileNav.classList.toggle("open");
            hamburger.setAttribute("aria-expanded", isOpen ? "true" : "false");
        });
        // Cierra el menú al navegar
        mobileNav.addEventListener("click", (e) => {
            if (e.target.tagName === "A") {
                mobileNav.classList.remove("open");
                hamburger.setAttribute("aria-expanded", "false");
            }
        });
    }

    // Smooth scroll para anclas
document.querySelectorAll('a[href^="#"]').forEach(anchor => {
    anchor.addEventListener('click', function (e) {
        e.preventDefault();
        document.querySelector(this.getAttribute('href')).scrollIntoView({
            behavior: 'smooth'
        });
    });
});
});
</script>