---
import { ClientRouter } from "astro:transitions";
import Nav from "../components/Nav.astro";

const { title, description } = Astro.props;
---

<!DOCTYPE html>
<html lang="es" >
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{title}</title>
    <meta name="description" content={description}>
    <!-- <link rel="canonical" href="https://www.tudominio.com/">-->
     <ClientRouter />
</head>
<body>

    <header>
        <div class="container header-container">
            <a href="/"><strong class="app-title">Limpiador Robot</strong></a>
            <Nav />
        </div>
    </header>

    <slot />

    <footer>
        <div class="container footer-container">
            <a href="/"><strong class="app-title">Limpiador Robot</strong></a>
            <button class="hamburger" aria-label="Abrir menú" aria-controls="mobile-nav" aria-expanded="false">
                <span></span><span></span><span></span>
            </button>
        </div>
        <nav id="mobile-nav" class="mobile-nav">
            <Nav />
        </nav>
    </footer>

</body>
</html>

<style is:global>
:root {
  /* Color palette */
  --primary: #003366;
  --secondary: #99068C;
  --success: #00CC66;
  --warning: #F59E0B;
  --error: #EF4444;
  --light: #f5f3f3;
  --rounded: .6rem;
  
  /* Typography */
  font-family: "Zed Display", "Helvetica Neue", Roboto, sans-serif;
  line-height: 1.3;
  
  background-color: var(--light);
  /* Text rendering */
  font-synthesis: none;
  text-rendering: optimizeLegibility;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}

/* Reset */
* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
  text-decoration: none;  
  /* Colors */
  color: var(--primary);
}

body {
  margin: 0;
  min-width: 320px;
  min-height: 100vh;
  font-weight: 500;
  scroll-behavior: smooth;
  padding-bottom: 60px; /* Espacio para el footer */
  font-size:large;
}

.container {
  width: 95%;
  max-width:1080px;
  margin: 0 auto;
}
main section:first-child {
  padding-top: unset;
}
main section {
  padding-top: 40px;
}

/* Typography */
h1, h2, h3, h4, h5, h6 {
  font-weight: 700;
  line-height: 1.2;
  padding: 10px 0;
  color: var(--primary);
}

h1 {
  font-size: 2rem;
  text-align: center;
  padding: 20px 0;
}

h2 {
  font-size: 1.3rem;
}

h3 {
  font-size: 1.2rem;
}

p {
  margin-bottom: 16px;
  line-height: 1.6;
  word-break: break-word;
}

strong {
  color:var(--secondary)
}


/* Header solo visible en desktop */
body > header {
  top: 0;
  bottom: unset;
  display: none;
}


/* Footer fijo en mobile con menú hamburguesa */
body > footer {
    width: 100%;
    padding: 0;
    position: fixed;
    bottom: 0;
    backdrop-filter: blur(2px);
    box-shadow: 0px .5px 2px rgba(0, 0, 0, .1);
    background-color: rgba(255, 255, 255, .95);
    z-index: 1000;
}
.footer-container,.header-container {
    display: flex;
    justify-content: space-between;
    align-items: center;
}
.hamburger {
    width: 44px;
    height: 44px;
    background: none;
    border: none;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    gap: 6px;
    cursor: pointer;
    z-index: 1100;
}
.hamburger span {
    display: block;
    width: 30px;
    height: 4px;
    background: var(--primary);
    border-radius: 2px;
    transition: all 0.3s;
}
.mobile-nav {
    display: none;
    position: fixed;
    left: 0;
    right: 0;
    bottom: 60px;
    background: #fff;
    box-shadow: 0 -2px 16px 0 rgba(0,0,0,0.08);
    z-index: 1050;
    padding: 20px 0 10px 0;
    border-radius: 1rem 1rem 0 0;
    animation: fadeInUp 0.2s;
}
.mobile-nav.open {
    display: block;
}

@keyframes fadeInUp {
    from { opacity: 0; transform: translateY(40px);}
    to { opacity: 1; transform: translateY(0);}
}
@media (min-width: 920px) {
    body{
        padding-top: 60px;
        padding-bottom: 0;
    }
    body > header {
      display: flex;
        position: fixed;
        width: 100%;
        z-index: 1000;
    }
     
    body > footer {
        display: none !important;
    }
}
@media (min-width: 1281px) {
  .container{
      max-width:1280px;
     }
    }

.app-nav-title,.app-nav a {
    text-align: center;
    display: block;
    border-bottom: 2px solid var(--light);
    width: 200px;
    background-color: white;
    border-radius: var(--rounded) var(--rounded) 0 0;
    margin: 0 !important;
    padding: 10px;
}
.app-nav a{
    border-radius:unset;
}
.app-nav a:last-child{
    border-radius: 0 0 var(--rounded) var(--rounded);
}
.footer-nav a {
    font-size: 1rem;
    color: var(--primary);
    padding: 10px 12px;
    border-radius: var(--rounded);
    background: none;
    transition: background 0.2s;
}
</style>

<script is:inline>
document.addEventListener("astro:page-load", () => {
    const hamburger = document.querySelector(".hamburger");
    const mobileNav = document.getElementById("mobile-nav");
    if (hamburger && mobileNav) {
        hamburger.addEventListener("click", () => {
            const isOpen = mobileNav.classList.toggle("open");
            hamburger.setAttribute("aria-expanded", isOpen ? "true" : "false");
        });
        // Cierra el menú al navegar
        mobileNav.addEventListener("click", (e) => {
            if (e.target.tagName === "A") {
                mobileNav.classList.remove("open");
                hamburger.setAttribute("aria-expanded", "false");
            }
        });
    }
});
</script>