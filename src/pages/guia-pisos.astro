<style>
.lead {
    font-size: 1.2em;
    margin: 20px 0;
}
.small-text {
    font-size: 0.8em;
    opacity: 0.8;
}
.top-products {
    margin: 40px auto;
}
.product-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 25px;
    margin-top: 30px;
}
.product-card {
    border: 1px solid #e1e1e1;
    padding: 50px 20px;
    border-radius: 10px;
    position: relative;
}
.badge {
    position: absolute;
    top: -10px;
    right: 15px;
    background: var(--secondary);
    color: white;
    padding: 5px 10px;
    border-radius: 20px;
    font-size: 0.8em;
    font-weight: bold;
}
.highlight {
    color: #2a5bd7;
    font-weight: bold;
}
.price {
    font-size: 1.1em;
    margin: 10px 0;
}

.comparison {
    margin: 50px auto;
}
.comparison-table {
    overflow-x: auto;
}
.comparison-table table {
    width: 100%;
    border-collapse: collapse;
    margin: 20px 0;
}
.comparison-table th, .comparison-table td {
    border: 1px solid #ddd;
    padding: 12px;
    text-align: center;
}
.comparison-table th {
    background: #2a5bd7;
    color: white;
}
.comparison-table tr:nth-child(even) {
    background-color: #f8f9fa;
}
.anchor-nav {
    display: flex;
    gap: 10px;
    flex-wrap: wrap;
    margin: 20px 0;
    justify-content: center;
}
.anchor-btn {
    padding: 10px 15px;
    border: 1px solid #ddd;
    border-radius: 30px;
    text-decoration: none;
    color: #333;
    transition: all 0.3s;
}
.anchor-btn.primary {
    background: var(--secondary);
    color: white;
    border-color: var(--secondary);
}
.compare-link {
    font-size: 0.8em;
    color: #0066cc;
    display: block;
    margin: 10px 0;
}
/* Sticky Menu mejorado */
.sticky-menu {
    position: fixed;
    top: 5px;
    left: 50%;
    transform: translateX(-50%);
    background: white;
    padding: 10px 15px;
    border-radius: 50px;
    box-shadow: 0 5px 25px rgba(0,0,0,0.15);
    z-index: 100;
    display: flex;
    gap: 5px;
}
.sticky-menu a {
    padding: 2px;
    border-radius: 20px;
    font-size: 0.9em;
}
.offer-btn {
    background: var(--secondary);
    color: white !important;
    width:90px;
    text-align: center;
}
/* Efectos hover */
.anchor-btn:hover, .compare-link:hover {
    transform: translateY(-2px);
    box-shadow: 0 5px 10px rgba(0,0,0,0.1);
}
@media (min-width: 920px){
   .sticky-menu {
    position: fixed;
    top: unset; left: 70%;
    bottom: 20px;
   }
}
</style>


