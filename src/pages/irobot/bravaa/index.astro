<style>
    /* Estilos Generales y Reseteo */
    :root {
    --color-primario: #007bff;
    --color-secundario: #f0f0f0;
    --color-texto: #333;
    --color-texto-claro: #666;
    --color-blanco: #fff;
    --color-negro: #000;
    --color-exito: #28a745;
    --color-advertencia: #ffc107;
}

/* Estilos base */
body {
    font-family: Arial, sans-serif;
    line-height: 1.6;
    color: var(--color-texto);
    margin: 0;
    padding: 0;
    background-color: var(--color-secundario);
}

/* Estructuras comunes */
.seccion {
    padding: 60px 20px;
    max-width: 1200px;
    margin: 0 auto;
}

.seccion-bg-blanco {
    background-color: var(--color-blanco);
}

.seccion-bg-gris {
    background-color: var(--color-secundario);
}

.seccion-bg-azul {
    background-color: var(--color-primario);
    color: var(--color-blanco);
}

/* Contenedores flexibles */
.contenedor-flex {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 40px;
}

@media (min-width: 768px) {
    .contenedor-flex {
        flex-direction: row;
        text-align: left;
    }
    .contenedor-flex > * {
        flex: 1;
        padding: 0 20px;
    }
}

/* Tipografía */
.titulo {
    font-weight: bold;
    color: var(--color-texto);
    line-height: 1.2;
}

.titulo-hero {
    font-size: 2.5em;
}

.titulo-seccion {
    font-size: 2em;
    text-align: center;
    margin-bottom: 40px;
}

.titulo-estrella {
    font-size: 1.8em;
    color: var(--color-negro);
}

.titulo-cta {
    font-size: 2.2em;
}

.subtitulo {
    color: var(--color-texto-claro);
}

.subtitulo-hero {
    font-size: 1.2em;
    margin-top: 15px;
}

.subtitulo-gama {
    font-size: 1.6em;
    margin: 60px 0 30px;
}

/* Botones */
.boton {
    display: inline-block;
    padding: 12px 25px;
    border-radius: 50px;
    text-decoration: none;
    font-weight: bold;
    transition: all 0.3s ease;
    font-size: 1.1em;
    margin: 10px;
    border: 2px solid;
}

.boton-primario {
    background-color: var(--color-primario);
    color: var(--color-blanco);
    border-color: var(--color-primario);
}

.boton-primario:hover {
    background-color: #0056b3;
    border-color: #0056b3;
}

.boton-secundario {
    background-color: transparent;
    color: var(--color-primario);
    border-color: var(--color-primario);
}

.boton-secundario:hover {
    background-color: var(--color-primario);
    color: var(--color-blanco);
}

.boton-blanco {
    background-color: var(--color-blanco);
    color: var(--color-primario);
    border-color: var(--color-blanco);
}

.boton-blanco:hover {
    background-color: var(--color-secundario);
    color: var(--color-primario);
}

/* Componentes comunes */
.precio-reseñas {
    display: flex;
    align-items: center;
    justify-content: center;
    margin-top: 20px;
}

@media (min-width: 768px) {
    .precio-reseñas {
        justify-content: flex-start;
    }
}

.precio {
    font-size: 2em;
    font-weight: bold;
    color: var(--color-negro);
    margin-right: 20px;
}

.estrellas {
    color: var(--color-advertencia);
    font-size: 1.2em;
    margin-right: 5px;
}

.enlace {
    color: var(--color-primario);
    text-decoration: none;
}

.enlace:hover {
    text-decoration: underline;
}

/* Imágenes */
.imagen {
    max-width: 100%;
    height: auto;
    border-radius: 8px;
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
}

.imagen-listado {
    margin-bottom: 15px;
}

/* Grids */
.grid {
    display: grid;
    gap: 30px;
}

@media (min-width: 600px) {
    .grid-col-2 {
        grid-template-columns: repeat(2, 1fr);
    }
}

@media (min-width: 900px) {
    .grid-col-3 {
        grid-template-columns: repeat(3, 1fr);
    }
}

/* Tarjetas */
.tarjeta {
    padding: 25px;
    border-radius: 8px;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    text-align: center;
    background-color: var(--color-blanco);
}

.tarjeta-gris {
    background-color: var(--color-secundario);
}

.tarjeta-producto .nombre {
    font-size: 1.3em;
    font-weight: bold;
    color: var(--color-negro);
    margin-bottom: 10px;
}

.tarjeta-producto .descripcion {
    color: var(--color-texto-claro);
    font-size: 0.95em;
    margin-bottom: 15px;
}

/* Video */
.contenedor-video {
    position: relative;
    width: 100%;
    max-width: 900px;
    padding-bottom: 56.25%; /* 16:9 */
    margin: 0 auto;
    border-radius: 8px;
    overflow: hidden;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.15);
}

.iframe-video {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    border: 0;
}

/* Tabla */
.tabla-responsive {
    overflow-x: auto;
    border-radius: 8px;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
}

.tabla {
    width: 100%;
    min-width: 600px;
    border-collapse: collapse;
    background-color: var(--color-blanco);
}

.tabla th, .tabla td {
    padding: 15px;
    border-bottom: 1px solid var(--color-secundario);
    text-align: left;
}

.tabla th {
    background-color: var(--color-primario);
    color: var(--color-blanco);
    font-weight: bold;
}

.tabla tr:last-child td {
    border-bottom: none;
}

/* Opiniones */
.opinion {
    padding: 30px;
    border-radius: 8px;
    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.05);
    text-align: left;
