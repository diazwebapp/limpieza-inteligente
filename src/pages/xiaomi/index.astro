const xiaomiProductsPopulares = [
  {
    title:"Xiaomi Robot Vacuum S20 - Robot Aspirador y fregasuelos con Sistema Inteligente de navegación láser (LDS), succión de 5000 Pa, rutas de Limpieza en Zigzag, Blanco (Versión ES)",
    urlAfiliado:"https://amzn.to/403wlL4",
    imageUrl:"https://m.media-amazon.com/images/I/51ipYfoZovL._AC_SX679_.jpg",
    stars:4.3,
    ratingCount: 3849,
  },
  {
    title:"Xiaomi Mi Robot Aspiradora Mop Pro, potencia de succión 2100Pa autonomía 110min 180m², detección obstáculos, planificación rutas, muros virtuales, comando de voz y a través de la aplicación - Negro",
    urlAfiliado:"https://amzn.to/45lrrg3",
    imageUrl:"https://m.media-amazon.com/images/I/6173uwPVzTL._AC_SX679_.jpg",
    stars:4.2,
    ratingCount: 6314,
  },
  {
    title:"Xiaomi Robot Vacuum E10 Robot Aspirador WiFi",
    urlAfiliado:"https://amzn.to/4dYOOyd",
