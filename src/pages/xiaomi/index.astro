import { schemaWebSite, schemaArticle, schemaFAQ } from "../../datos/seoBase.js";

const xiaomiProducts = [
  {
    title:"Xiaomi Robot Vacuum S20 - Robot Aspirador y fregasuelos con Sistema Inteligente de navegación láser (LDS), succión de 5000 Pa, rutas de Limpieza en Zigzag, Blanco (Versión ES)",
    urlAfiliado:"https://amzn.to/403wlL4",
